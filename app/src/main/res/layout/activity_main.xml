<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10pt"
    tools:context="com.example.priya.calculatorapp.MainActivity">

    <EditText
        android:id="@+id/edShowNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:ems="10"
        android:gravity="right"
        android:hint="0"
        android:inputType="textPersonName"
        android:paddingTop="30pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bAC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="bClean"
                android:text="AC"
                android:textSize="10pt" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bPlusMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="+/-"
                android:textSize="10pt" />

            <Button
                android:id="@+id/bP"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="bPercent"
                android:text="%"
                android:textSize="10pt" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bDiv"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buOperations"
                android:text="/"
                android:textSize="10pt" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/b7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="7"
                android:textSize="10pt" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/b8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="8"
                android:textSize="10pt" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/b9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="9"
                android:textSize="10pt" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bMul"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buOperations"
                android:text="*"
                android:textSize="10pt" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/b4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="4"
                android:textSize="10pt" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/b5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="5"
                android:textSize="10pt" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/b6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="6"
                android:textSize="10pt" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bSum"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buOperations"
                android:text="+"
                android:textSize="10pt" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/b1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="1"
                android:textSize="10pt" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/b2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="2"
                android:textSize="10pt" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/b3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="3"
                android:textSize="10pt" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bSub"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buOperations"
                android:text="-"
                android:textSize="10pt" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/b0"
            android:layout_width="60pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:onClick="buNumberEvent"
            android:text="0"
            android:textSize="10pt" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/bDot"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:onClick="buNumberEvent"
            android:text="."
            android:textSize="10pt" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/button3"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:onClick="buEqualEvent"
            android:text="="
            android:textSize="10pt" />
    </LinearLayout>
</LinearLayout>
